generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  createdAt DateTime @default(now())
  swaps     Swap[]
  liquidity Liquidity[]
}

model Token {
  id        Int      @id @default(autoincrement())
  symbol    String
  address   String   @unique
  decimals  Int
  createdAt DateTime @default(now())
  pairs0    Pair[]   @relation("Token0")
  pairs1    Pair[]   @relation("Token1")
}

model Pair {
  id        Int      @id @default(autoincrement())
  token0    Token    @relation("Token0", fields: [token0Id], references: [id])
  token0Id  Int
  token1    Token    @relation("Token1", fields: [token1Id], references: [id])
  token1Id  Int
  reserve0  Float    @default(0)
  reserve1  Float    @default(0)
  swaps     Swap[]
  liquidity Liquidity[]
  createdAt DateTime @default(now())

   @@unique([token0Id, token1Id])
}

model Swap {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  pair      Pair     @relation(fields: [pairId], references: [id])
  pairId    Int
  amountIn  Float
  amountOut Float
  tokenIn   Int
  tokenOut  Int
  createdAt DateTime @default(now())
}

model Liquidity {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  pair      Pair     @relation(fields: [pairId], references: [id])
  pairId    Int
  amount0   Float
  amount1   Float
  createdAt DateTime @default(now())
}

model SwapEvent {
  id        Int
  pairId    Int
  amountIn  Decimal
  amountOut Decimal
  createdAt DateTime
}

model LiquidityEvent {
  id      Int
  pairId  Int
  type    LiquidityType
}
